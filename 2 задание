import re

isu = 367826
print(isu % 6)

regexp = r"\sВТ\s((\s)?(–)?(\w{0,})?([а-яА-Я]{0,})?(\s)?){0,4}\sИТМО\s"
def test(value):
    match = re.search(regexp, value)
    if match:
        print(match.group())
    else:
        print("None")
test("А ты знал, что ВТ – лучшая кафедра в ИТМО ?") #ВТ - лучшая кафедра в ИТМО
test(" ВТ займет первое место в Мегабатле ИТМО ") #None
test("В начале года на ВТ поступило большинство студентов ИТМО ") #ВТ поступило большинство студентов ИТМО
test("Кроме ВТ в ИТМО существует много других мегафакультетов") #ВТ в ИТМО
test("ЛоВТ в в в ИТМО. ушен ") #None



